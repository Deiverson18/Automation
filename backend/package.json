{
  "name": "playwright-hub-backend",
  "version": "1.0.0",
  "description": "Backend para Playwright Hub - Plataforma de Automação com Persistência SQLite",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node database/seedData.js",
    "db:clean": "node database/seedData.js clean",
    "db:reset": "npm run db:clean && npm run db:push && npm run db:seed"
  },
  "keywords": ["playwright", "automation", "backend", "express", "sqlite", "prisma"],
  "author": "Playwright Hub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "vm2": "^3.9.19"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}